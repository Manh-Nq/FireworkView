<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:paddingVertical="64dp"
    android:paddingHorizontal="22dp">

    <ImageView
        android:id="@+id/list_item_background"
        android:layout_height="300dp"
        android:layout_width="180dp"
        android:src="@drawable/icon_background_blue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/left_3d_icon"
        android:layout_height="300dp"
        android:layout_width="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/right_3d_icon"
        app:layout_constraintEnd_toStartOf="@id/list_item_background"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/right_3d_icon"
        android:layout_height="300dp"
        android:layout_width="4dp"
        android:scaleType="fitXY"
        android:src="@drawable/left_3d_icon"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/list_item_background"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/list_item_icon"
        android:layout_centerInParent="true"
        android:layout_height="64dp"
        android:layout_width="64dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/list_item_text"
        android:layout_below="@id/list_item_background"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_width="wrap_content"
        android:textColor="@color/teal_200"
        android:textSize="22sp"
        app:layout_constraintBottom_toBottomOf="@id/list_item_background"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>